# Router Configuration
ROUTER_HOST=0.0.0.0
ROUTER_PORT=8080
ROUTER_WORKERS=4
ROUTER_LOG_LEVEL=INFO

# Redis Cache
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=
REDIS_TTL=300

# NATS JetStream
NATS_URL=nats://nats:4222
NATS_CLUSTER_ID=trading-cluster
NATS_CLIENT_ID=router-1

# Prometheus
PROMETHEUS_PORT=9090
PROMETHEUS_RETENTION=15d

# Grafana
GRAFANA_PORT=3000
GRAFANA_USER=admin
GRAFANA_PASSWORD=admin

# PostgreSQL (optional for trade storage)
POSTGRES_HOST=postgres
POSTGRES_PORT=5432
POSTGRES_DB=trading
POSTGRES_USER=trader
POSTGRES_PASSWORD=changeme

# S3 Compatible Storage (MinIO)
S3_ENDPOINT=http://minio:9000
S3_ACCESS_KEY=minioadmin
S3_SECRET_KEY=minioadmin
S3_BUCKET=trading-data
S3_REGION=us-east-1

# Model Configuration
MODEL_PATH=/models
MODEL_VERSION=latest
MODEL_DEVICE=cpu  # or cuda

# Feature Store
FEATURE_STORE_PATH=/data/features
FEATURE_UPDATE_INTERVAL=60

# Risk Limits
MAX_POSITION_SIZE=0.05
MAX_GROSS_EXPOSURE=2.0
MAX_DRAWDOWN=0.10

# Performance Monitoring
ENABLE_PROFILING=false
PROFILE_PATH=/tmp/profiles
TRACE_SAMPLING_RATE=0.01

# Security
JWT_SECRET_KEY=your-secret-key-change-in-production
JWT_ALGORITHM=HS256
JWT_EXPIRY_HOURS=24

# Development
DEBUG=false
TESTING=false
RELOAD=false